{
  "name": "@tscircuit/bun-test-plan",
  "version": "0.0.3",
  "description": "Generate test plans for parallel CI execution with bun test",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "bun-test-plan": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup ./src/index.ts ./src/cli.ts --format esm --dts --sourcemap --external bun",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "bun",
    "test",
    "parallel",
    "ci",
    "github-actions",
    "tscircuit"
  ],
  "author": "tscircuit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tscircuit/bun-test-plan"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
